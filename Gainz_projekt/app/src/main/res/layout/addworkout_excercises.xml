<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/addworkout_excercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addworkout_excercise_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SÃ¤tze:"
            android:textSize="20dp"
            android:layout_marginStart="10dp"/>


        <EditText
            android:id="@+id/addworkout_excercise_saetze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:ems="8"
            android:hint="0"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addworkout_excercise_Textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wiederholungen: "
            android:textSize="20dp"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/addworkout_excercise_wiederholungen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:ems="8"
            android:hint="0"
            android:inputType="number"
            />
    </LinearLayout>
</LinearLayout>
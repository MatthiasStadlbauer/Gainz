<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workout_detail"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/activity_workout_detail_name"
        android:layout_width="match_parent"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="0"
        android:text="Workout"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/activity_workout_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_workout_detail_name"
        android:dividerHeight="1dp"/>


    <Button
        android:id="@+id/activity_workout_detail_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starten"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_workout_detail_abbrechen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activity_workout_detail_abbrechen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abbrechen"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/activity_workout_detail_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/activity_workout_detail_start" />
</androidx.constraintlayout.widget.ConstraintLayout>